{
    "env": {
        "es6": true,
        "node": true
    },
    "extends":[
        "eslint:recommended",
        "plugin:node/recommended"
    ],
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2021,
        "requireConfigFile": false
    },
    "plugins": [
        "unicorn"
    ],
    "rules": {
        "no-dupe-else-if": "warn",
        "default-case-last": "warn",
        "no-unreachable-loop": "error",
        "unicorn/better-regex": "warn",
        "unicorn/catch-error-name": "error",
        "unicorn/filename-case": ["error", {
            "case": "camelCase"
        }],
        "unicorn/prefer-set-has": ["error"],
        "unicorn/no-array-for-each": ["error"],
        //"unicorn/prevent-abbreviations": ["error"],
        "unicorn/consistent-function-scoping": "warn",
        "unicorn/explicit-length-check": "warn",
        "unicorn/error-message": "error",
        "unicorn/no-array-instanceof": "error",
        "unicorn/prefer-spread": "error",
        "arrow-spacing": ["warn"],
        "init-declarations": ["warn", "always"],
        "no-duplicate-imports": [
            "warn"
        ],
        "no-const-assign": [
            "error"
        ],
        "no-import-assign": [
            "error"
        ],
        "space-unary-ops": [
            "error",
            {
              "words": true,
              "nonwords": false
        }],
        "quote-props": [
            "error", 
            "consistent"
        ],
        "no-unneeded-ternary": [
            "error"
        ],
        "rest-spread-spacing": ["error", "never"],
        "no-param-reassign": [
            "warn"
        ],
        "default-case": [
            "warn"
        ],
        "no-self-compare": [
            "error"
        ],
        "prefer-object-spread": [ "warn" ],
        "indent": [
            "warn",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-lone-blocks": [
            "error"
        ],
        "no-multi-str": [
            "error"
        ],
        "no-path-concat": [
            "error"
        ],
        "no-process-exit": [
            "error"
        ],
        "global-require": [
            "warn"
        ],
        "no-lonely-if": [
            "warn"
        ],
        "no-spaced-func": [
            "error"
        ],
        "no-confusing-arrow": [
            "error"
        ],
        "prefer-template": [
            "error"
        ],
        "no-constant-condition": [
            "error"
        ],
        "arrow-body-style": [
            "warn",
            "as-needed"
        ],
        "no-var": [
            "error"
        ],
        "no-nested-ternary": [
            "warn"
        ],
        "no-multiple-empty-lines": [
            "warn"
        ],
        "no-template-curly-in-string": [
            "error"
        ],
        "no-empty-function": [
            "error"
        ],
        "no-floating-decimal": [
            "error"
        ],
        "no-multi-spaces": [
            "error"
        ],
        "yoda" : [
            "error"
        ],
        "array-callback-return": [
            "error"
        ]
    }
}